{
	"private": true,
	"version": "0.0.0",
	"description": "My opinionated stack to ease project building",
	"author": {
		"name": "Ayoub Adib",
		"email": "adbayb@gmail.com",
		"url": "https://twitter.com/adbayb"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:adbayb/stack.git"
	},
	"license": "MIT",
	"scripts": {
		"prepare": "husky install ./scripts/hooks && pnpm build",
		"clean": "stack clean",
		"check": "echo 'stack check'",
		"fix": "echo 'stack fix'",
		"start": "turbo run start",
		"build": "turbo run build",
		"watch": "turbo run watch",
		"release": "pnpm build && pnpm changeset release",
		"add:changelog": "pnpm changeset"
	},
	"devDependencies": {
		"@adbayb/eslint-config": "workspace:*",
		"@adbayb/prettier-config": "workspace:*",
		"@adbayb/stack": "workspace:*",
		"@adbayb/ts-config": "workspace:*",
		"@changesets/changelog-github": "0.4.8",
		"@changesets/cli": "2.26.2",
		"@commitlint/cli": "17.6.7",
		"@commitlint/config-conventional": "17.6.7",
		"@types/node": "20.4.8",
		"eslint": "8.46.0",
		"husky": "8.0.3",
		"lint-staged": "13.2.3",
		"prettier": "3.0.1",
		"quickbundle": "1.2.0",
		"turbo": "1.10.12",
		"typescript": "5.1.6"
	},
	"prettier": "@adbayb/prettier-config",
	"eslintConfig": {
		"extends": "@adbayb"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"**/*.{js,jsx,ts,tsx,cjs,mjs,cts,mts}": [
			"pnpm check"
		],
		"**/*.{json,md,mdx,html,css,yaml,yml}": [
			"pnpm fix"
		]
	},
	"packageManager": "pnpm@8.6.12",
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=8.0.0"
	}
}
